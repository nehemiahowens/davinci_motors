<h1>New Car</h1>

<%= form_for(@car) do |f| %>

    <div class="field">
      <%= f.label :make %>
      <%= f.text_field :make %>
    </div>

    <div class="field">
      <%= f.label :model %>
      <%= f.text_field :model %>
    </div>

    <div class="field">
      <%= f.label :price %>
      <%= f.text_field :price %>
    </div>

    <div class="field">
      <%= f.label :year %>
      <%= f.text_field :year %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>

<%= link_to 'Back', cars_path %>